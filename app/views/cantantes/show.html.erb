<div class="mdl-cell--12-col relative">
	<div class="mdl-cell mdl-cell--5-col mdl-cell--12-col-tablet card-cantante mdl-cell--12-col-phone">
		<div class=" mdl-cell mdl-cell--12-col">
			<div class="mdl-card__title bg-teal">
			<div class="mdl-cell--hide-phone">
				<button id="opciones-cantante" class="mdl-button mdl-js-button mdl-button--icon">
					<i class="material-icons">more_vert</i>
				</button>

				<ul class="mdl-menu mdl-menu--bottom-left mdl-js-menu mdl-js-ripple-effect" for="opciones-cantante">
				<li class="mdl-menu__item">Editar</li>
				<li class="mdl-menu__item">Agregar Acorde</li>
				<li disabled class="mdl-menu__item">Agregar Album</li>
			</ul>
			</div>
				<h2 class="mdl-card__title-text" ><%= @cantante.nombre %></h2>
				
		</div>
		<img src="https://tiempodeavivamiento.files.wordpress.com/2014/05/danilo-montero-4-610x250.jpg" width="100%" height="auto" alt="<%= @cantante.nombre %>" >
		<div class="mdl-card__actions">
		</div>
	</div>

</div>

<div class="mdl-cell mdl-cell--7-col mdl-cell--12-col-phone mdl-cell--12-col-tablet card-colecciones ">
	<div class="mdl-cell mdl-cell--12-col ">
		<div class="mdl-tabs mdl-js-tabs mdl-js-ripple-effect ">
			<div class="mdl-tabs__tab-bar bg-blue-gray margin-bottom">
				<a href="#acordes" class="mdl-tabs__tab is-active">Acordes</a>
				<a href="#albums" class="mdl-tabs__tab">Albumes</a>
			</div>
			<%= render 'cantantes/colecciones/acordes' %>
			<%= render 'cantantes/colecciones/albums' %>
		</div>

	</div>
</div>
</div>