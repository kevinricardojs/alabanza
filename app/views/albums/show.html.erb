<!---->
<section class="mdl-grid mdl-grid--no-spacing mdl-cell mdl-cell--12-col mdl-cell--4-col-phone" >
	<article class="mdl-cell mdl-cell--2-offset-desktop mdl-cell--8-col cover relative mdl-shadow--2dp" style="background-image: url('<%= @album.url_cover %>')">
		<div class="album-info">
			<div class="info">
				<h1><%= @album.nombre %></h1>
				<h2><%= @album.year %></h2>
				<%= link_to cantante_path(@album.cantante) do %>
				<h2><%= @album.cantante.nombre %></h2>
				<%end%>
			</div>
			<div class="mdl-cell--hide-phone opcion-right">
				<button id="opciones-cantante-index" class="mdl-button mdl-js-button mdl-button--icon">
					<i class="material-icons">more_vert</i>
				</button>

				<ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect" for="opciones-cantante-index">
					<%= link_to edit_cantante_album_path(@cantante, @album) do %>
					<li class="mdl-menu__item">Editar Album</li>
					<%end%>
					<%= link_to "#" do %>
					<li class="mdl-menu__item">Ordenar Canciones</li>
					<%end%>
				</ul>
			</div>
		</div>
	</article>
	<article class="mdl-grid mdl-grid--no-spacing mdl-cell mdl-cell--2-offset-desktop mdl-cell--8-col song-album mdl-cell--4-col-phone mdl-shadow--2dp">
		<ul class="mdl-cell mdl-cell--12-col mdl-list bg-blanco mdl-shadow--2dp">
			<% @songs.each do |song|%>
			<%= link_to cantante_song_path(@cantante, song), class:"link-resource" do %>
			<li class="mdl-list__item">
				<span class="mdl-list__item-primary-content">
					<i class="fa fa-music mdl-list__item-icon"></i>
					<%= song.nombre%> acordes
				</span>
			</li>
			<%end%>

			<%end%>
		</ul>
		<div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-phone" style="display: none;">
			<%= link_to 'Edit', edit_cantante_album_path(@cantante, @album) %> |
			<%= link_to 'Back', @album.cantante %>
		</div>
	</article>
</section>
